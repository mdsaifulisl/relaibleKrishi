<%- include("../partials/head.ejs") %>

<style>
  .detail {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  .detail .blog_img img{
    width: 100%;
    border-radius: 10px;
  }
  .title_detail p{
    text-align: justify;
  }
</style>
</head>
<body>
  <!-- Header -->
   <%- include("../partials/header.ejs") %>


   <div class="container py-5">

    <div class="detail">
      <div class="blog_img pb-4">
        <img src="<%= blog.image %>" alt="">
      </div>

      <div class="title_detail mt-4">
        <h3 class="mb-4"><%= blog.title %></h3>
        <p ><%- blog.description.replace(/\n/g, '<br>') %></p>


        <% if (isLoggedIn){%>

          <div class="blog-btns">
            <% if (blog.type === 'technology') { %>
            <div>
              <a href="/technology/edit/<%= blog.id %>" class="edit"><i class="fa-solid fa-pen-to-square"> </i> Edit</a>
            </div>

            <form action="/technology/delete/<%= blog.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
              <button type="submit" class="delete"><i class="fa-solid fa-trash"></i> Delete</button>
            </form> 
            <% } else if (blog.type === 'blog') { %>
              <div>
                <a href="/blog/edit/<%= blog.id %>" class="edit"><i class="fa-solid fa-pen-to-square"> </i> Edit</a>
              </div>

              <form action="/blog/delete/<%= blog.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                <button type="submit" class="delete"><i class="fa-solid fa-trash"></i> Delete</button>
              </form> 
            <% } else if (blog.type === 'disease') { %>
              <div>
                <a href="/diseases/edit/<%= blog.id %>" class="edit"><i class="fa-solid fa-pen-to-square"> </i> Edit</a>
              </div>

              <form action="/diseases/delete/<%= blog.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this?');">
                <button type="submit" class="delete"><i class="fa-solid fa-trash"></i> Delete</button>
              </form> 

            <% } %>
          </div>
        <%}%>


      </div>
    </div>
   </div>
  
  <!--Footer-->
   <%- include("../partials/footer.ejs") %> 
  <!-- JS -->
 <script src="/js/header.js"></script>
</body>
</html>
